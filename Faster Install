#!/bin/bash
# ğŸ§Ÿ MERCURY: THE SOUL INJECTOR (Automated API Linker)

echo "ğŸ“¡ Extracting API Keys from the Vault..."

# Extract keys from XML files
SONARR_KEY=$(grep -oP '(?<=<ApiKey>).*?(?=</ApiKey>)' ~/mercury/config/sonarr/config.xml)
RADARR_KEY=$(grep -oP '(?<=<ApiKey>).*?(?=</ApiKey>)' ~/mercury/config/radarr/config.xml)
PROWLARR_KEY=$(grep -oP '(?<=<ApiKey>).*?(?=</ApiKey>)' ~/mercury/config/prowlarr/config.xml)

echo "--------------------------------"
echo "âœ… Sonarr Key:  $SONARR_KEY"
